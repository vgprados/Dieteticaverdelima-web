---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Verde Lima" description="Dietetica">
    <div class="flex justify-center items-center h-screen bg-green-100">
        <div class="text-center">
            <h3 class="text-6xl font-semibold text-lime-700 mb-2">
                Contacto
            </h3>
            <p class="text-lg text-gray-600 mb-4">
                Envíanos tu consulta a través del siguiente formulario
            </p>
        </div>
    </div>

    <div id="wrapper" class="flex justify-center">
        <div class="w-full max-w-md bg-white shadow-md rounded-lg p-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Envíe su formulario</h2>
            <form action="https://formsubmit.co/vgomezprados@gmail.com" method="POST" class="space-y-4">
                <div>
                    <label for="Nombre" class="block text-gray-700 font-medium">Nombre</label>
                    <input type="text" name="name" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-lime-500 focus:border-lime-500" placeholder="Escriba su nombre">
                </div>

                <div>
                    <label for="email" class="block text-gray-700 font-medium">Correo Electrónico</label>
                    <input type="email" name="email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-lime-500 focus:border-lime-500" placeholder="Escriba su correo">
                </div>

                <div>
                    <label for="subject" class="block text-gray-700 font-medium">Asunto</label>
                    <input type="text" name="subject" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-lime-500 focus:border-lime-500" placeholder="Motivo del mensaje">
                </div>

                <div>
                    <label for="comments" class="block text-gray-700 font-medium">Comentarios</label>
                    <textarea name="comments" cols="15" rows="5" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-lime-500 focus:border-lime-500" placeholder="Escriba su mensaje"></textarea>
                </div>

                <div class="text-center">
                    <input type="submit" value="Enviar" class="bg-lime-600 text-white py-2 px-4 rounded-lg shadow-md hover:bg-lime-700 transition duration-300">
                </div>
            </form>
        </div>
    </div>
</Layout>
